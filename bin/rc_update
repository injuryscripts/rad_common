#!/usr/bin/env ruby
require 'fileutils'

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

FileUtils.chdir Dir.pwd do
  puts "\n== Removing old logs and tempfiles =="
  system 'rm -rf log/ && rm -rf tmp/'

  puts "== Running RC Generator"
  system 'bin/rails g rad_common:install'
end