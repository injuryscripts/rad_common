.card
  = render 'layouts/card_header', action_name: 'custom', title: t('devise.invitations.edit.header'), icon: 'fa-plus'
  .card-body
    = simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
      = render partial: 'devise/shared/error_messages', resource: resource
      = f.hidden_field :invitation_token

      = f.input :password
      = f.input :password_confirmation

      = f.button :submit, t('devise.invitations.edit.submit_button'), class: 'btn btn-primary'
