.navbar.navbar-default.navbar-static-top
  .container-fluid
    %button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-responsive-collapse')
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to root_path, { class: 'navbar-brand' } do
      = image_tag 'app_logo.png'
    .navbar-collapse.collapse.navbar-responsive-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-left
          -if current_user.can_read?(Division)
            %li= link_to 'Divisions', divisions_path
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
              Admin
              %b.caret
            %ul.dropdown-menu
              -if current_user.can_read?(User)
                %li= link_to 'Users', users_path
              -if current_user.can_read?(SecurityRole)
                %li= link_to 'Security Roles', security_roles_path
              -if current_user.can_update?(Company)
                %li= link_to 'Company Info', edit_company_path(Company.main)
              -if current_user.can_audit?(Company)
                %li= link_to "Audit Search", audit_search_users_path
      = render 'layouts/navigation_right'
