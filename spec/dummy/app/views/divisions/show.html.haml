.card
  -actions = [link_to('Right Button', root_path, class: 'btn btn-secondary btn-sm')]
  = render 'layouts/card_header', additional_external_actions: actions
  .card-body
    = render 'layouts/show_data_columns', data: [:name, :code, :notify, :timezone, :hourly_rate, { label: 'Attachment', value: render('layouts/attachment', record: @division, attachment_name: 'logo', new_tab: true) }], resource: @division
