.row
  .col-lg-6
    .card.card-default
      = render 'layouts/panel_header', action_name: 'custom', title: 'Audit Search', icon: 'fa-search'
      .card-body
        = form_tag(audit_search_users_path, method: 'get') do
          .form-inputs#record-search
            .row
              .col-lg-4
                .form-group
                  %label.col-form-label Model
                  %select.form-control{ name: 'model_name', id: 'record-search' }
                    %option{ value: '', selected: true}=''
                    -audit_models_to_search.each do |model|
                      %option{ value: model }= model
              .col-lg-4
                .form-group
                  %label.col-form-label Record ID
                  %input.form-control{name: 'record_id'}
            .row
              .col-lg-12
                %button.btn.btn-success{ type: 'submit' }
                  %i.fa.fa-search
                  Search
  .col-lg-6
    .card.card-default
      = render 'layouts/panel_header', action_name: 'custom', title: 'System Audits', icon: 'fa-search'
      .card-body
        = form_tag(audit_search_users_path(system_audits: true), method: 'get') do
          .form-inputs
            %input{ name: 'system_audits', value: 'true', hidden: true }
            .row
              .col-lg-9
                .form-group
                  %label.col-form-label Model
                  %select.form-control{ name: 'model_name' }
                    %option{ value: '', selected: true}=''
                    -audit_models_to_search.each do |model|
                      %option{ value: model }= model
            .row
              .col-lg-12
                %button.btn.btn-success{ type: 'submit' }
                  %i.fa.fa-search
                  Search
