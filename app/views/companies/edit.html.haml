.card.card-default
  = render 'layouts/panel_header', no_new_button: true, no_delete_button: true, no_index_button: true
  .card-body
    = simple_form_for(@company) do |f|
      = f.error_notification

      .form-inputs
        .row
          .col-lg-6= f.input :name
          .col-lg-6= f.input :website
        .row
          .col-lg-5= f.input :address_1
          .col-lg-7= f.input :address_2
        .row
          .col-lg-5= f.input :city
          .col-lg-1= f.input :state
          .col-lg-2= f.input :zipcode
          .col-lg-2= f.input :email
          .col-lg-2= f.input :phone_number
        .row
          .col-lg-6= f.input :valid_user_domains_entry, label: 'Valid user email domains',
                                                        placeholder: 'Enter domains separated by commas. Example: abc.com, fyi.com',
                                                        tooltip: 'When a user signs up, this collection of domains authorizes what email addresses are valid. This protects the system with an extra layer of security to prevent unauthorized users on other email domains and can also prevent a typo on the email address entered.'
          .col-lg-3= f.input :validity_checked_at, as: :date, html5: true

      .form-actions
        = f.button :submit, 'Save', class: 'btn btn-primary'
