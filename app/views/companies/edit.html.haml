.card
  = render 'layouts/card_header',
           title: edit_company_title(@company),
           no_new_button: true,
           no_delete_button: true,
           no_index_button: true,
           no_show_link: true

  .card-body
    = simple_form_for(@company, url: '/rad_common/company/update', method: :put) do |f|
      = f.error_notification message: "#{t('simple_form.error_notification.default_message')} #{@company.errors.full_messages.join('. ')}"

      = render 'companies/form', f: f
