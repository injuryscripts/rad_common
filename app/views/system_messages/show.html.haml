.card
  = render 'layouts/card_header', no_new_button: true,
                                  no_index_button: true,
                                  no_delete_button: true,
                                  no_edit_button: true,
                                  title: system_message_title(@system_message),
                                  icon: 'fa-envelope'
  .card-body
    = render 'layouts/show_data_columns', resource: @system_message, data: [{ label: 'Message', value: @system_message.html_message }, { label: 'Message Type', value: enum_to_translated_option(SystemMessage, :message_type, @system_message.message_type) }]
