.card
  = render 'layouts/card_header', action_name: 'custom', title: "Permission: #{@permission.label}", icon: 'fa-file'
  .card-body
    - if @permission.tooltip?
      .row
        .col-lg-12
          %dl.dl-horizontal
            %dt Description:
            %dd= @permission.tooltip
    .row
      .col-lg-6
        %h3 Roles with Permission (#{@permission.security_roles.count})
        %table.table.table-striped.table-bordered
          - @permission.security_roles.each do |security_role|
            %tr
              %td= link_to security_role.name, security_role
      .col-lg-6
        %h3 Users with Permission (#{@permission.users.count})
        %table.table.table-striped.table-bordered
          - @permission.users.each do |user|
            %tr
              %td= secured_link(user)
