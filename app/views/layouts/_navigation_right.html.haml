%ul.nav.navbar-nav.navbar-right
  - if user_signed_in?
    %li.nav-item.dropdown
      %a.nav-link.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
        = current_user
        -if Rails.application.config.use_avatar && current_user.avatar.attached?
          = image_tag current_user.avatar.variant(resize: '100x100'), class: 'user-icon'
      %ul.dropdown-menu.dropdown-menu-right
        %li= link_to 'My Account', edit_user_registration_path, class: 'dropdown-item'
        -if current_user.can_read?(NotificationSetting)
          %li= link_to 'Notification Settings', '/rad_common/notification_settings', class: 'dropdown-item'
        %li= link_to 'Sign Out', destroy_user_session_path, method: 'delete', class: 'dropdown-item'
  -else
    %li= link_to 'Sign In', new_user_session_path, class: 'dropdown-item'
    %li= link_to 'Sign Up', new_user_registration_path, class: 'dropdown-item'
