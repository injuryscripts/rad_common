%ul.nav.navbar-nav.navbar-right
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
        = current_user
        -if Rails.application.config.use_avatar && current_user.avatar.attached?
          = image_tag current_user.avatar.variant(resize: '100x100'), class: 'user-icon'
        %b.caret
      %ul.dropdown-menu
        %li= link_to 'My Account', edit_user_registration_path
        -if current_user.can_read?(NotificationSetting)
          %li= link_to 'Notification Settings', '/rad_common/notification_settings'
        %li= link_to 'Logout', destroy_user_session_path, method: 'delete'
  -else
    %li= link_to 'Login', new_user_session_path
    %li= link_to 'Sign Up', new_user_registration_path
